{
  "extends": "react-app",
  "plugins": ["prettier", "mocha"],
  "globals": {
    "logger": true,
    "expect": true,
    "sinon": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-expressions": "off",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-identical-title": "error",
    "mocha/no-nested-tests": "error"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.dev.js"
      }
    }
  }
}
